{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Irrigation System Configuration",
  "description": "Configuration schema for the irrigation control system",
  "type": "object",
  "required": ["timezone", "max_concurrent_valves", "location", "mqtt", "telemetry", "alerts", "valves"],
  "properties": {
    "timezone": {
      "type": "string",
      "description": "Timezone identifier (e.g., 'Asia/Jerusalem')",
      "minLength": 1
    },
    "max_concurrent_valves": {
      "type": "integer",
      "description": "Maximum number of valves that can run simultaneously",
      "minimum": 1
    },
    "flow_sensor_pin": {
      "type": "integer",
      "description": "GPIO pin for flow sensor",
      "minimum": 0
    },
    "location": {
      "type": "object",
      "description": "Geographic location",
      "required": ["latitude", "longitude"],
      "properties": {
        "latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        }
      },
      "additionalProperties": false
    },
    "mqtt": {
      "type": "object",
      "description": "MQTT broker configuration",
      "required": ["enabled", "hostname", "client_name"],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "hostname": {
          "type": "string",
          "minLength": 1
        },
        "client_name": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "telemetry": {
      "type": "object",
      "description": "Telemetry reporting configuration",
      "required": ["enabled"],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "idle_interval": {
          "type": "number",
          "minimum": 0,
          "description": "Telemetry interval when idle (seconds)"
        },
        "active_interval": {
          "type": "number",
          "minimum": 0,
          "description": "Telemetry interval when active (seconds)"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {"enabled": {"const": true}}
          },
          "then": {
            "required": ["idle_interval", "active_interval"]
          }
        }
      ],
      "additionalProperties": false
    },
    "sensors": {
      "type": "array",
      "description": "Weather/environmental sensors",
      "items": {
        "type": "object",
        "required": ["type", "name", "enabled", "precipitation"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["openweathermap"]
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "enabled": {
            "type": "boolean"
          },
          "api_key": {
            "type": "string"
          },
          "latitude": {
            "type": "number",
            "minimum": -90,
            "maximum": 90
          },
          "longitude": {
            "type": "number",
            "minimum": -180,
            "maximum": 180
          },
          "precipitation": {
            "type": "object",
            "properties": {
              "days_to_aggregate": {
                "type": "integer",
                "minimum": 0
              },
              "disable_threshold_mm": {
                "type": "number",
                "minimum": 0
              }
            },
            "additionalProperties": false
          },
          "uv_adjustments": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["max_uv_index", "multiplier"],
              "properties": {
                "max_uv_index": {
                  "type": "number",
                  "minimum": 0
                },
                "multiplier": {
                  "type": "number",
                  "minimum": 0
                }
              },
              "additionalProperties": false
            }
          }
        }
      }
    },
    "waterflow": {
      "type": "object",
      "description": "Water flow monitoring configuration",
      "required": ["type", "enabled"],
      "properties": {
        "type": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "leakdetection": {
          "type": "boolean"
        },
        "hostname": {
          "type": "string"
        },
        "clientname": {
          "type": "string"
        },
        "topic": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "alerts": {
      "type": "object",
      "description": "Alert configuration",
      "required": ["enabled"],
      "properties": {
        "enabled": {
          "type": "object",
          "properties": {
            "leak": {"type": "boolean"},
            "malfunction_no_flow": {"type": "boolean"},
            "irregular_flow": {"type": "boolean"},
            "sensor_error": {"type": "boolean"},
            "system_exit": {"type": "boolean"}
          },
          "additionalProperties": false
        },
        "leak_repeat_minutes": {
          "type": "number",
          "minimum": 0
        },
        "irregular_flow_threshold": {
          "type": "number",
          "minimum": 0
        },
        "leak_detection_exclusions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["time_based_on"],
            "properties": {
              "time_based_on": {
                "type": "string",
                "enum": ["fixed", "sunrise", "sunset"]
              },
              "fixed_start_time": {
                "type": "string",
                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
              },
              "offset_minutes": {
                "type": "integer"
              },
              "duration": {
                "type": "integer",
                "minimum": 1
              },
              "days": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"]
                }
              },
              "seasons": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["Spring", "Summer", "Fall", "Winter"]
                }
              }
            },
            "allOf": [
              {
                "if": {
                  "properties": {"time_based_on": {"const": "fixed"}}
                },
                "then": {
                  "required": ["fixed_start_time"]
                }
              },
              {
                "if": {
                  "properties": {"time_based_on": {"enum": ["sunrise", "sunset"]}}
                },
                "then": {
                  "required": ["offset_minutes"]
                }
              }
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "valves": {
      "type": "array",
      "description": "Irrigation valve configurations",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "enabled", "type", "watering_mode", "schedules"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "enabled": {
            "type": "boolean"
          },
          "type": {
            "type": "string",
            "enum": ["2wire", "3wire"]
          },
          "gpio_on_pin": {
            "type": "integer",
            "minimum": 0
          },
          "gpio_off_pin": {
            "type": "integer",
            "minimum": 0
          },
          "watering_mode": {
            "type": "string",
            "enum": ["duration", "volume"]
          },
          "sensor": {
            "type": "string"
          },
          "schedules": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["time_based_on", "duration"],
              "properties": {
                "time_based_on": {
                  "type": "string",
                  "enum": ["fixed", "sunrise", "sunset"]
                },
                "fixed_start_time": {
                  "type": "string",
                  "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
                  "description": "Time in HH:MM format"
                },
                "offset_minutes": {
                  "type": "integer",
                  "description": "Offset from sunrise/sunset in minutes"
                },
                "duration": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "Duration in minutes"
                },
                "days": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"]
                  }
                },
                "seasons": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["Spring", "Summer", "Fall", "Winter"]
                  }
                },
                "enable_uv_adjustments": {
                  "type": "boolean"
                }
              },
              "allOf": [
                {
                  "if": {
                    "properties": {"time_based_on": {"const": "fixed"}}
                  },
                  "then": {
                    "required": ["fixed_start_time"]
                  }
                },
                {
                  "if": {
                    "properties": {"time_based_on": {"enum": ["sunrise", "sunset"]}}
                  },
                  "then": {
                    "required": ["offset_minutes"]
                  }
                }
              ],
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
